#!/bin/bash
cat /vagrant/vagrant_authorized_key >> /home/vagrant/.ssh/authorized_keys

# setup apt proxy cache connection
echo "Acquire::HTTP::Proxy \"http://{{ acia_vagrant_hostnet_netpart }}.1:{{ acia_squid_port }}\";" >> /etc/apt/apt.conf.d/03autoproxy

# setup CA certificate from docker proxy cache
cp /vagrant/ca.crt /usr/local/share/ca-certificates
update-ca-certificates
echo "DOCKER_OPTS=\"--registry-mirror=https://{{ acia_vagrant_hostnet_netpart }}.1:{{ acia_dmirror_port }}\"" > /etc/default/docker

# no sudo password questions for vagrant user
echo "vagrant ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/90-vagrant-nopass

# temporary workaround for https://github.com/ansible/ansible-modules-core/issues/2488
addgroup docker
usermod -G docker vagrant

# update cache to avoid problems with unauthenticated packages
apt-get update
